<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sf.udcw2">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.UdacodingWeek2Apps">
        <activity
            android:name=".DistanceConvertionActivity"
            android:theme="@style/Theme.UdacodingWeek2Apps"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".PhysicCalculateActivity"
            android:label="@string/title_activity_physic_calculate"
            android:theme="@style/Theme.UdacodingWeek2Apps.NoActionBar.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.UdacodingWeek2Apps.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".HomeActivity"
            android:theme="@style/Theme.UdacodingWeek2Apps" />
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>